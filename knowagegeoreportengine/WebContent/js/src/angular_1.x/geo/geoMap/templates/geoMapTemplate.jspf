<div layout="row" layout-wrap layout-fill ng-cloak >
    <rest-loading></rest-loading>
	<div flex="" id='map'>
		<div id="popup" class="ol-popup">
			 <md-button class="md-icon-button md-primary ol-popup-closer" aria-label="close" ng-click="closePopup()">
        		<md-icon md-font-icon="fa fa-times"></md-icon>
      		</md-button>
			<div id="popup-content" class="ol-popup-content"></div>
		</div>
		<div layout="row" 	style="bottom: 0; right: 0; position: absolute;">
		<span flex></span>
		
		    <geo-dataset ng-if="!geoModule_template.noDatasetReport"></geo-dataset>
			<geo-legend id="legend" ng-if="!geoModule_template.noDatasetReport" ng-show="visibility.showLegendButton" ></geo-legend>
			<geo-distance-calculator id="calculator" ng-show="visibility.showDistanceCalculator"></geo-distance-calculator>
			<geo-download ng-show="visibility.showDownloadButton"></geo-download>
			<geo-save ng-show="showSaveButton==true"></geo-save>
			
		</div>
	</div>

	<geo-rigth-menu id="menu" ng-show="visibility.showRightConfigMenu"></geo-rigth-menu>
	
	<geo-cross-nav-multiselect></geo-cross-nav-multiselect>

	<!-- this is to include child directive -->
	<div ng-transclude></div>


</div>